{
  "host": "lightapi.net",
  "service": "user",
  "action": [
    {
      "name": "createUser",
      "version": "0.1.0",
      "handler": "CreateUser",
      "skipAuth": true,
      "schema": {
        "title": "Service",
        "type": "object",
        "properties": {
          "host": {
            "type": "string",
            "description": "user host indicator the organization for user",
            "enum": [
              "lightapi.net"
            ]
          },
          "email": {
            "type": "string",
            "pattern": "^\\S+@\\S+$",
            "description": "user email address"
          },
          "language": {
            "type": "string",
            "description": "preferred language of user",
            "enum": [
              "en"
            ]
          },
          "password": {
            "type": "string",
            "description": "raw password of user"
          },
          "passwordConfirm": {
            "type": "string",
            "description": "password confirm of user"
          },
          "firstName": {
            "type": "string",
            "description": "firstName of the user"
          },
          "lastName": {
            "type": "string",
            "description": "firstName of the user"
          },
          "gender": {
            "type": "string",
            "description": "user gender type",
            "enum": [
              "F",
              "M"
            ]
          },
          "birthday": {
            "type": "string",
            "format": "date",
            "description": "birthday of the user"
          },
          "taijiWallet": {
            "type": "string",
            "description": "taiji blockchain wallet address"
          },
          "country": {
            "type": "string",
            "description": "country name"
          },
          "province": {
            "type": "string",
            "description": "province or state name"
          },
          "city": {
            "type": "string",
            "description": "city name"
          },
          "postCode": {
            "type": "string",
            "description": "postCode or zipCode"
          },
          "address": {
            "type": "string",
            "description": "address"
          }
        },
        "required": [
          "host",
          "email",
          "language",
          "password",
          "passwordConfirm",
          "firstName",
          "lastName",
          "gender"          
        ]
      }
    },
    {
      "name": "deleteUserById",
      "version": "0.1.0",
      "handler": "DeleteUserById",
      "scope": "portal.w",
      "schema": {
        "title": "Service",
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          }
        },
        "required": [
          "email"
        ]
      }
    },
