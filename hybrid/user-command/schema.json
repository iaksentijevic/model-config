    {
      "name": "changePassword",
      "version": "0.1.0",
      "handler": "ChangePassword",
      "scope": "portal.w",
      "schema": {
        "title": "Service",
        "type": "object",
        "properties": {
          "oldPassword": {
            "type": "string",
            "description": "the old password"
          },
          "newPassword": {
            "type": "string",
            "description": "the new password"
          },
          "passwordConfirm": {
            "type": "string",
            "description": "password confirm of user"
          }
        },
        "required": [
          "oldPassword",
          "newPassword",
          "passwordConfirm"
        ]
      }
    },
    {
      "name": "forgetPassword",
      "version": "0.1.0",
      "handler": "ForgetPassword",
      "skipAuth": true,
      "schema": {
        "title": "Service",
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "email address of the user"
          }
        },
        "required": [
          "email"
        ]
      }
    },
    {
      "name": "resetPassword",
      "version": "0.1.0",
      "handler": "ResetPassword",
      "skipAuth": true,
      "schema": {
        "title": "Service",
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "email address of the user"
          },
          "token": {
            "type": "string",
            "description": "password reset token received from email"
          },
          "newPassword": {
            "type": "string",
            "description": "the new password"
          },
          "passwordConfirm": {
            "type": "string",
            "description": "password confirm of user"
          }
        },
        "required": [
          "email",
          "token",
          "newPassword",
          "passwordConfirm"
        ]
      }
    },
    {
      "name": "confirmUser",
      "version": "0.1.0",
      "handler": "ConfirmUser",
      "skipAuth": true,
      "schema": {
        "title": "Service",
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "pattern": "^\\S+@\\S+$"
          },
          "token": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "token"
        ]
      }
    }
  ]
}